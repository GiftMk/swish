{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"moduleResolution": "nodenext",
		"module": "NodeNext",
		"lib": ["ESNext"],
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/**/*.ts"]
}
